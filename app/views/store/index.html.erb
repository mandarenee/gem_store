  <div ng-controller="StoreController as store" ng-init="index()">
    <form name="newProduct" ng-submit="create()">
      <label for="name">
        <input type="text" name="name" ng-model="product.name" />
      </label>
      <label for="price">
        <input type="text" name="price" ng-model="product.price" />
      </label>
      <input type="submit"/>
    </form>

    <ul class="list-group">
      <li class="list-group-item" ng-repeat="product in products">
        <h3 product-title></h3>
        <button class="pull-right price" ng-show="product.canPurchase"> Add to Cart </button>
        <img ng-src="{{product.images[0].full}}"/>
        <product-panels ng-init="tab = 1"></product-panels>
      </li>
    </ul>
  </div>

