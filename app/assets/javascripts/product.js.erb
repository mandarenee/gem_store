(function(){
  var app = angular.module('store-products', [ ]);

  app.directive('productTitle', function(){
    return {
      restrict: 'A',
      templateUrl: "<%= asset_path 'templates/product-title.html' %>",
    };
  });

  app.directive('newProduct', function(){
    return {
      restrict: 'A',
      templateUrl: "<%= asset_path 'templates/new-product.html' %>",
    };
  });

  app.directive('editProduct', function(){
  return {
    restrict: 'A',
    templateUrl: "<%= asset_path 'templates/edit-product.html' %>",
  //   controller:function($scope){
  //     $scope.class.edit = true;
  //   }
  //   controllerAs: 'edits'
    };
  });

  app.directive('productPanels', function() {
    return {
      restrict: 'E',
      templateUrl: "<%= asset_path 'templates/product-panels.html' %>",
      controller:function(){
        this.tab = 1;

        this.selectTab = function(setTab) {
          this.tab = setTab;
        };
        this.isSelected = function(checkTab) {
          return this.tab === checkTab;
        };
      },
      controllerAs: 'panels'
    };
  });
})();
